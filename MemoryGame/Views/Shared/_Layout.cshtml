@using Microsoft.AspNetCore.Http
@{
    var userId = Context.Session.GetInt32("UserID");
    var username = Context.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MemoryGame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MemoryGame.styles.css" asp-append-version="true" />
    <style>
        /* Simple extra polish for presentation */
        .navbar-custom {
            background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);
        }

        .navbar-brand, .nav-link, .navbar-text {
            color: #fff !important;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .footer-custom {
            background: #0d6efd;
            color: #f8f9fa;
        }

            .footer-custom a {
                color: #f8f9fa;
                text-decoration: underline;
            }

        .course-title {
            font-size: 0.9rem;
            font-weight: 500;
            color: rgba(255,255,255,0.85);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    🎮 MemoryGame
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Game" asp-action="Lobby">Lobby</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CardAdmin" asp-action="Index">Cards Admin</a>
                        </li>
                    </ul>

                    <!-- Right side -->
                    <div class="d-flex align-items-center ms-auto">
                        <span class="course-title me-3">
                            Databasteknik och Webbaserade System
                        </span>

                        @if (userId is not null)
                        {
                            <span class="text-light me-2">👋 @username</span>
                            <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-light btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-light btn-sm text-primary" asp-controller="Account" asp-action="Register">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom mt-4 py-3">
        <div class="container d-flex justify-content-between">
            <span>&copy; 2025 - MemoryGame</span>
            <span><a asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
